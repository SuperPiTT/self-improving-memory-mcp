  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.22.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@xenova/transformers": "^2.17.2",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^6.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "mocha": "^11.7.4",
    "zod": "^4.1.12"
  }
